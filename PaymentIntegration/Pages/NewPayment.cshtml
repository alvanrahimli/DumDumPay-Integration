@page
@model PaymentIntegration.Pages.NewPayment

@{
    Layout = "Shared/_Layout";
}

@if (Model.Errors != null && Model.Errors.Count > 0)
{
    <ul class="list-group">
        @foreach (var err in Model.Errors)
        {
            <li class="list-group-item">@err</li>
        }
    </ul>
}

<form method="post">
  <div class="mb-3">
    <label asp-for="PaymentContext.Amount" class="form-label"></label>
    <input type="number" class="form-control" asp-for="PaymentContext.Amount">
  </div>
  <div class="mb-3">
    <label asp-for="PaymentContext.Country" class="form-label"></label>
    <input type="text" class="form-control" asp-for="PaymentContext.Country">
  </div>
  <div class="mb-3">
    <label asp-for="PaymentContext.Currency" class="form-label"></label>
    <input type="text" class="form-control" asp-for="PaymentContext.Currency">
  </div>
  <div class="mb-3">
    <label asp-for="PaymentContext.CardNumber" class="form-label"></label>
    <input type="text" class="form-control" asp-for="PaymentContext.CardNumber">
  </div>
  <div class="mb-3">
    <label asp-for="PaymentContext.CardHolder" class="form-label"></label>
    <input type="text" class="form-control" asp-for="PaymentContext.CardHolder">
  </div>
  <div class="mb-3">
    <label asp-for="PaymentContext.Cvv" class="form-label"></label>
    <input type="text" class="form-control" asp-for="PaymentContext.Cvv">
  </div>
  <div class="mb-3">
    <label asp-for="PaymentContext.CardExpiryDate" class="form-label"></label>
    <input type="text" class="form-control" asp-for="PaymentContext.CardExpiryDate">
  </div>
  <div class="mb-3">
    <label asp-for="PaymentContext.OrderId" class="form-label"></label>
    <input type="text" class="form-control" asp-for="PaymentContext.OrderId">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>